    <link rel="stylesheet" href="/Css/style.css">    
</head>
<body>
        
    <div class="container">

        @RenderBody()

        @Html.Partial("/Views/Partials/Footer.cshtml")

    </div>

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>

    <!-- Latest compiled and minified JavaScript -->
